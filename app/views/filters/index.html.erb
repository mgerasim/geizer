<h1>Фильтры</h1>

<table>
  <tr>
    <th><%= Filter.human_attribute_name(:name) %></th>
    <th><%= Filter.human_attribute_name(:resource) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @filters.each do |filter| %>
  <tr>
    <td><%= filter.name %></td>
    <td><%= filter.resource %></td>
    <td><%= link_to 'Показать', filter %></td>
    <td><%= link_to 'Редактировать', edit_filter_path(filter) %></td>
    <td><%= link_to 'Удалить', filter, confirm: 'Вы уверены?', method: :delete %></td>
  </tr>
<% end %>
</table>

